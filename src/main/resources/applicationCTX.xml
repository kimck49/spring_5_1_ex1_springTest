<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="student1" class="com.kimck.spring_5_1.Student">
        <constructor-arg>
            <value>홍길동</value>
        </constructor-arg>
        <constructor-arg>
            <value>20살</value>
        </constructor-arg>
        <constructor-arg>
            <value>3학년</value>
        </constructor-arg>
        <constructor-arg>
            <value>2학년</value>
        </constructor-arg>
    </bean>
    
    <bean id="studnet2" class="com.kimck.spring_5_1.Student">
        <property name="name">
        <value>이순신</value>
        </property>
        <property name="age">
        <value>40</value>
        </property>
        <property name="gradeNum">
        <value>5</value>
        </property>
        <property name="classNum">
        <value>4</value>
        </property>
        
    </bean>
    
    <bean id="studentInfo" class="com.kimck.spring_5_1.StudentInfo">
        <constructor-arg>
            <ref bean="student1" />
        </constructor-arg>
    </bean>

</beans>
